{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
		"text": "Cause of Death when Climbing Mount Everest",
        "orient": "top",
        "anchor": "start",
        "align": "left"
	},
    "data": {"url": "data/death_cause.csv"},
    "width": "container",
    "height": "container",
    "mark": "area",
    "encoding": {
      "x": {
        "field": "decade",
        "title": "Decade"
      },
      "y": {
        "aggregate": "sum", "field": "n",
        "stack": "normalize",
        "title": ""  
      },
      "color": {
          "field":"death_cause",
          "scale":{
              "scheme": "category20b"
            },
            "title": "Cause of Death"
        }
    }
  }