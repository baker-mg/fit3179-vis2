{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"data": { "url": "data/average_time_day.csv" },
    "title": {
        "text": "Summit Times of Climbers of Mount Everest",
        "subtitle": "Subtitle",
        "orient": "top",
        "anchor": "start",
        "align": "left",
        "color": "whitesmoke",
        "subtitleColor": "whitesmoke",
        "font": "Source Sans Pro",
        "fontSize": 25,
        "fontWeight": 200,
        "fontStyle": "normal",
        "encode": {
              "subtitle": {
                "enter": {
                    "fontStyle": {
                        "value": "italic"
                    }
                }
              }
            }
    },
    "config": {
        "text": {
            "color": "whitesmoke"
        },
        "axis": {
            "labelColor": "whitesmoke",
            "titleColor": "whitesmoke",
            "grid": false
        }
    },
    "background": "rgba(31, 29, 29, 0.95)",
	"facet": {
		"row": {
			"field": "range",
			"type": "ordinal",
			"sort": ["1990-1999", "2000-2009", "2010-2020"],
            "title": "Time Period",
            "header":{
                "labelColor": "whitesmoke",
                "titleColor": "whitesmoke"
            }
		}
	},
	"spec": {
        "width": 475,
        "height": 140,
		"mark": {
            "type": "line",
            "point": {
                "size": 100
            },
            "color": "#045a8d"
        },
		"encoding": {
			"x": {
				"field": "summit_hour",
				"type": "quantitative",
				"axis": {
					"tickCount": 24
				},
                "title": "Hour of Summit"
			},
			"y": {
				"field": "summit_climbers",
				"type": "quantitative",
                "title": "Average Number of Climbers"
			},
            "tooltip": [
                {
                    "field": "summit_climbers",
				"type": "quantitative",
                "title": "Average Number of Climbers"
                },
                {
                    "field": "summit_hour",
                    "type": "quantitative",
                    "title": "Hour of Summit" 
                },
                {
                    "field": "range",
                    "type": "ordinal",
                    "title": "Time Period"
                }
            ]
		}
	}
}
