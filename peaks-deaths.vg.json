{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"width": 800,
	"height": 500,
	"title": "test",
	"projection": { "type": "equalEarth" },
	"layer": [
		{
			"data": {
				"url": "data/nepal-outline.json",
				"format": {
					"type": "topojson",
					"feature": "gadm36_NPL_0"
				}
			},
			"mark": {
				"type": "geoshape",
				"fill": "lightgray",
				"stroke": "white"
			}
		},
        {
            "data": {
                "url": "data/peaks-deaths-attempts.csv"
            },
            "encoding":{
                "longitude":{"field":"lon", "type": "quantitative"},
                "latitude":{"field":"lat", "type": "quantitative"}
            },
            "layer": [
                {
                    "mark": {
                        "type":"point",
                        "shape":"triangle-up",
                        "tooltip": {"content": "data"}
                    },
                    "encoding": {
                        "size":{
                            "field":"deaths",
                            "type": "quantitative",
                            "scale":{
                                "type": "log"
                            }
                        },
                        "color":{
                            "field": "death_rate",
                            "type": "quantitative"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "dy": 10
                    },
                    "encoding": {
                        "text": {
                            "field": "peak_name",
                            "type": "nominal"
                        }
                    }
                }
            ]
        }
	]
}