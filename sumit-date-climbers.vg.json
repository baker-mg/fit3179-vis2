{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"vconcat": [
		{
			"data": { "url": "data/summit_date_climbers_filter.csv" },
			"width": 800,
			"layer": [
				{
					"mark": "rect",
					"encoding": {
						"y": {
							"field": "summit_date",
							"type": "ordinal",
							"timeUnit": "monthdate"
						},
						"x": {
							"field": "summit_date",
							"type": "ordinal",
							"timeUnit": "year"
						},
						"color": {
							"condition": {
								"test": "datum['summit_climbers'] > 0",
								"field": "summit_climbers",
								"type": "quantitative"
							},
							"value": "white"
						}
					}
				},
				{
					"mark": "text",
					"encoding": {
						"y": {
							"field": "summit_date",
							"type": "ordinal",
							"timeUnit": "monthdate"
						},
						"x": {
							"field": "summit_date",
							"type": "ordinal",
							"timeUnit": "year"
						},
						"text": {
							"condition": {
								"test": "datum['summit_climbers'] > 0",
								"field": "summit_climbers",
								"type": "quantitative"
							}
						}
					}
				}
			]
		},
		{
			"data": {
				"url": "data/summit_counts_year.csv"
			},
			"width": 800,
			"mark": "bar",
			"encoding": {
				"x": {
					"field": "year",
					"type": "nominal"
				},
				"y": {
					"field": "summit_climbers",
					"type": "quantitative"
				}
			}
		}
	],
	"config": {
		"axis": {
			"grid": true,
			"tickBand": "extent"
		}
	}
}
